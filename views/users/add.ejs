<form action="" method="post">
    <div class="mb-3">
        <label for="">Tên</label>
        <input type="text" placeholder="Nhập tên..." name="name" class="form-control">
    </div>
    <div class="mb-3">
        <label for="">Email</label>
        <input type="email" placeholder="Nhập email..." name="email" class="form-control">
    </div>
    <div class="mb-3">
        <label for="">Mật khẩu</label>
        <input type="password" placeholder="Nhập mật khẩu..." name="password" class="form-control">
    </div>
    <div class="mb-3">
        <label for="">Trạng thái</label>
        <select name="status" class="form-control">
            <option value="all">Tất cả</option>
            <option value="1">Kích hoạt</option>
            <option value="0">Chưa kích hoạt</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="">Khóa học</label>
        <% courses.forEach(course=>{ %>
            <label class="mb-3 d-block">
                <input type="checkbox" name="courses" value="<%= course.id %>"><%= course.name %>
            </label>
        <% }) %>
    </div>
    <div class="mb-3 d-grid">
     <button class="btn btn-primary">Thêm</button>
    </div>
</form>