<h1>Sửa thông tin</h1>
<form action="" method="post">
    <div class="mb-3">
        <label for="">Tên</label>
        <input type="text" placeholder="Nhập tên..." name="name" class="form-control" value=<%= user?.name ? user.name: '' %>>
    </div>
    <div class="mb-3">
        <label for="">Email</label>
        <input type="email" placeholder="Nhập email..." name="email" class="form-control" value=<%= user?.email ? user.email: '' %>>
    </div>
    <div class="mb-3">
        <label for="">Mật khẩu</label>
        <input type="password" placeholder="Nhập mật khẩu..." name="password" class="form-control" value=<%= user?.password ? user.password: '' %>>
    </div>
    <div class="mb-3">
        <label for="">Trạng thái</label>
        <select name="status" class="form-control">
            <option value="all">Tất cả</option>
            <option value="1" <%= user?.status ? 'selected' : '' %> >Kích hoạt</option>
            <option value="0" <%= !user?.status ? 'selected' : '' %> >Chưa kích hoạt</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="">Khóa học</label>
        <% courses.forEach(course=>{ %>
            <label class="mb-3 d-block">
                <input type="checkbox" name="courses" value="<%= course.id %>" <%= coursesUtils(user, course.id) ? 'checked' : " " %>><%= course.name %>
            </label>
        <% }) %>
    </div>
    <div class="mb-3 d-grid">
     <button class="btn btn-primary">Cập nhật</button>
    </div>
</form>